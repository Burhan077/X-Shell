#autoload

local mod
local -a funcs alts
local -a modules=( example mathfunc system random )

for mod in $modules; do
  funcs=( ${${${(f)"$(zmodload -Fl xsh/$mod 2>/dev/null)"}:#^+f:*}##+f:} )
  alts+=( "module-math-functions.${mod}:math function from xsh/${mod}:compadd -S '(' $funcs" )
done

_alternative $alts
